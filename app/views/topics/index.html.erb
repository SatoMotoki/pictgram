<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
            <%= image_tag topic.image.url %>
            <!-- !は反転.favorite_usersはtopicに紐づいているfavoriteに紐づいているuserを取得。include?()は引数が含まれていればtrue。でなきゃfalse。いいねをしているユーザーに自分も含まれていたらハートを消す処理。いいねしていない=falseなら反転してハートが表示される-->
            <% if !topic.favorite_users.include?(current_user) %>
            <!-- favorite_path => POST /favorites favorites#create-->
            <!-- link_toのパスに引数(シンボル)を与えるとlink_toにパラメータを渡せる。今回の場合、favorite_controllerのcreateアクションの中のparams[:topic_id]にtopic.idが入る-->
              <%= link_to favorites_path(topic_id: topic.id), method: :post do %>
                <i class="fas fa-heart"></i>
                <%# <%= image_tag 'icons/heart-black.png', class: 'topic-index-icon' %>
              <% end %>
            <% end %>
            <%= link_to new_topic_comment_path(topic_id: topic.id) do %>
              <%= image_tag 'icons/comment.png', class: 'topic-index-icon' %>
            <% end %>
            <p class="topic-text">
              <%= topic.description %>
            </p>
            <h4 class="topic-text">コメント</h4>
            <% topic.comments.each do |comment| %>
              <p class="topic-text">
                <%= comment.text %>
              </p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
