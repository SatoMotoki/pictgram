<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
            <%= image_tag topic.image.url %>
            <!-- !は反転。topicは@topicsの繰り返し処理。favorite_usersは関連付けしてるがよく分からない。include?()は引数が含まれていればtrue。でなきゃfalse。-->
            <% if !topic.favorite_users.include?(current_user) %>
            <!-- favorite_path => POST /favorites favorites#create-->
            <!-- link_toのパスに引数(シンボル)を与えるとlink_toにパラメータを渡せる。今回の場合、facorite_controllerのcreateアクションの中のparams[:topic_id]にtopic.idが入る-->
              <%= link_to favorites_path(topic_id: topic.id), method: :post do %>
                <%= image_tag 'icons/heart-black.png', class: 'topic-index-icon' %>
              <% end %>
            <% end %>
            <%= image_tag 'icons/comment.png', class: 'topic-index-icon' %>
            <p class="topic-text">
              <%= topic.description %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
